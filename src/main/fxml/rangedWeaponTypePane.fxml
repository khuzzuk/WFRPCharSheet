<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TitledPane animated="false" text="Broń strzelecka"
            xmlns="http://javafx.com/javafx/8.0.60"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.khuzzuk.wfrpchar.gui.RangedWeaponTypePaneController">
    <SplitPane dividerPositions="0.3"
               maxWidth="Infinity"
               maxHeight="Infinity">
        <GridPane hgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"
                                   minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0"
                                vgrow="SOMETIMES"/>
            </rowConstraints>
            <ListView fx:id="rangedWeaponList"
                      onMouseClicked="#selectRangedWeapon"/>
        </GridPane>
        <GridPane hgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"
                                   hgrow="ALWAYS"
                                   maxWidth="Infinity"
                                   percentWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES"
                                   maxWidth="Infinity"
                                   percentWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES"
                                   percentWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES"
                                   maxWidth="Infinity"
                                   percentWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES"
                                   maxWidth="Infinity"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="-Infinity"
                                minHeight="-Infinity"
                                prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity"
                                minHeight="25.0"
                                prefHeight="40.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity"
                                minHeight="10.0"
                                prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity"
                                minHeight="-Infinity"
                                prefHeight="40.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity"
                                minHeight="-Infinity"
                                prefHeight="90.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity"
                                minHeight="30" prefHeight="50.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints
                        maxHeight="1.7976931348623157E308"
                        minHeight="10.0" prefHeight="30.0"
                        vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label text="Nazwa"/>
            <TextField fx:id="rwName"
                       GridPane.columnIndex="1"/>
            <Label text="typ" GridPane.columnIndex="2"/>
            <TextField fx:id="rwTypeName"
                       GridPane.columnIndex="3"/>
            <Label text="Waga" GridPane.rowIndex="1"/>
            <TextField fx:id="rwWeight"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>
            <Label text="Cena" GridPane.rowIndex="2"/>
            <VBox GridPane.columnIndex="1"
                  GridPane.rowIndex="2">
                <Label text="Złoto"/>
                <TextField fx:id="rwGold"/>
            </VBox>
            <VBox GridPane.columnIndex="2"
                  GridPane.rowIndex="2">
                <Label text="Złoto"/>
                <TextField fx:id="rwSilver"/>
            </VBox>
            <VBox GridPane.columnIndex="3"
                  GridPane.rowIndex="2">
                <Label text="Złoto"/>
                <TextField fx:id="rwLead"/>
            </VBox>
            <Label text="dostępność"
                   GridPane.columnIndex="2"
                   GridPane.rowIndex="1"/>
            <ComboBox fx:id="rwAccessibility"
                      GridPane.columnIndex="3"
                      GridPane.rowIndex="1"/>
            <Label text="siła" GridPane.rowIndex="3"/>
            <TextField fx:id="rwStrength"
                       GridPane.rowIndex="3"
                       GridPane.columnIndex="2"/>
            <Label text="zasięg" GridPane.rowIndex="4"/>
            <VBox GridPane.columnIndex="1"
                  GridPane.rowIndex="4">
                <Label text="min."/>
                <TextField fx:id="rwMinRange"/>
            </VBox>
            <VBox GridPane.columnIndex="2"
                  GridPane.rowIndex="4">
                <Label text="efektywny"/>
                <TextField fx:id="rwMedRange"/>
            </VBox>
            <VBox GridPane.columnIndex="3"
                  GridPane.rowIndex="4">
                <Label text="max."/>
                <TextField fx:id="rwMaxRange"/>
            </VBox>
            <VBox GridPane.columnIndex="4"
                  GridPane.rowIndex="4">
                <Label text="ład."/>
                <ComboBox fx:id="rwLoadTime"/>
            </VBox>
            <Label text="pozostałe nazwy"
                   GridPane.rowIndex="5"/>
            <VBox GridPane.columnIndex="1"
                  GridPane.rowIndex="5">
                <Label text="przym. męski"/>
                <TextField fx:id="rwLangMasc"/>
            </VBox>
            <VBox GridPane.columnIndex="2"
                  GridPane.rowIndex="5">
                <Label text="przym. męski"/>
                <TextField fx:id="rwLangFem"/>
            </VBox>
            <VBox GridPane.columnIndex="3"
                  GridPane.rowIndex="5">
                <Label text="przym. męski"/>
                <TextField fx:id="rwLangNeutr"/>
            </VBox>
            <VBox GridPane.columnIndex="4"
                  GridPane.rowIndex="5">
                <Label text="przym. męski"/>
                <TextField fx:id="rwLangAblative"/>
            </VBox>
            <Label text="cechy specjalne"
                   GridPane.rowIndex="6"/>
            <TextArea fx:id="rwSpecialFeatures"
                      GridPane.columnIndex="1"
                      GridPane.columnSpan="2"
                      GridPane.rowIndex="6"/>
            <Button text="Usuń" GridPane.columnIndex="2"
                    GridPane.rowIndex="7"
                    maxWidth="Infinity"
                    onAction="#removeRangedWeapon"/>
            <Button text="Nowy" GridPane.columnIndex="3"
                    GridPane.rowIndex="7"
                    maxWidth="Infinity"/>
            <Button text="Zapisz" GridPane.columnIndex="4"
                    GridPane.rowIndex="7"
                    maxWidth="Infinity"
                    onAction="#saveRangedWeaponType"/>
        </GridPane>
    </SplitPane>
</TitledPane>