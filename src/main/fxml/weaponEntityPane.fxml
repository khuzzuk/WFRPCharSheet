<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<TitledPane maxHeight="Infinity" maxWidth="Infinity"
            text="Broń ręczna"
            xmlns="http://javafx.com/javafx/8.0.60"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.khuzzuk.wfrpchar.gui.controllers.ItemsListedController">
    <SplitPane dividerPositions="0.3" maxWidth="Infinity" maxHeight="Infinity">
        <GridPane maxHeight="Infinity" maxWidth="Infinity">
            <ListView fx:id="items" maxHeight="Infinity" maxWidth="Infinity"/>
        </GridPane>
        <GridPane maxWidth="Infinity" maxHeight="Infinity">
            <columnConstraints>
                <ColumnConstraints/>
            </columnConstraints>
            <padding>
                <Insets left="10"/>
            </padding>
            <Label text="nazwa"/>
            <TextField fx:id="name" GridPane.columnIndex="1"/>
            <Label text="cena bazowa" GridPane.rowIndex="1"/>
            <VBox GridPane.rowIndex="1" GridPane.columnIndex="1">
                <Label text="złoto"/>
                <TextField fx:id="weGold"/>
            </VBox>
        </GridPane>
    </SplitPane>
</TitledPane>