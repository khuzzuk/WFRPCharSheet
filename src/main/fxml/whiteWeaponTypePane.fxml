<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TitledPane animated="true" maxHeight="Infinity"
            maxWidth="Infinity" text="Broń biała"
            xmlns="http://javafx.com/javafx/8.0.60"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.khuzzuk.wfrpchar.gui.WhiteWeaponTypePaneController">
    <SplitPane dividerPositions="0.3"
               maxHeight="Infinity"
               maxWidth="Infinity">
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"
                                   minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0"
                                vgrow="SOMETIMES"/>
            </rowConstraints>
            <ListView fx:id="weaponList"
                      onMouseClicked="#selectWhiteWeapon"/>
        </GridPane>
        <GridPane hgap="10.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"
                                   hgrow="ALWAYS"
                                   maxWidth="Infinity"
                                   percentWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES"
                                   maxWidth="Infinity"
                                   percentWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES"
                                   percentWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES"
                                   maxWidth="Infinity"
                                   percentWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES"
                                   maxWidth="Infinity"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="-Infinity"
                                minHeight="-Infinity"
                                prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity"
                                minHeight="10.0"
                                prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity"
                                minHeight="10.0"
                                prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity"
                                minHeight="-Infinity"
                                prefHeight="40.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity"
                                minHeight="-Infinity"
                                prefHeight="90.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity"
                                minHeight="-Infinity"
                                prefHeight="50.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity"
                                minHeight="-Infinity"
                                prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0"
                                prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0"
                                prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints
                        maxHeight="Infinity"
                        minHeight="10.0" prefHeight="30.0"
                        vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets right="10.0"/>
            </padding>
            <Label text="nazwa"/>
            <TextField fx:id="nameWW"
                       GridPane.columnIndex="1"/>
            <Label text="waga" GridPane.rowIndex="2"/>
            <TextField fx:id="weightWW"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="2"/>
            <Label text="cena" GridPane.rowIndex="3"/>
            <VBox alignment="CENTER"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="3">
                <Label text="złoto"/>
                <TextField fx:id="goldWW"/>
            </VBox>
            <VBox alignment="CENTER"
                  GridPane.columnIndex="2"
                  GridPane.rowIndex="3">
                <Label text="srebro"/>
                <TextField fx:id="silverWW"/>
            </VBox>
            <VBox alignment="CENTER"
                  GridPane.columnIndex="3"
                  GridPane.rowIndex="3">
                <Label text="miedź"/>
                <TextField fx:id="leadWW"/>
            </VBox>
            <Label text="dostępność"
                   GridPane.columnIndex="2"
                   GridPane.halignment="RIGHT"/>
            <Label text="cechy specjalne"
                   GridPane.rowIndex="8"/>
            <Label text="obrażenia" GridPane.rowIndex="4"/>
            <Label text="rzuty" GridPane.columnIndex="2"
                   GridPane.halignment="RIGHT"
                   GridPane.rowIndex="4"/>
            <Label text="modyfikatory"
                   GridPane.rowIndex="5"/>
            <Label text="pozostałe nazwy"
                   GridPane.rowIndex="7"/>
            <Label text="ręczność" GridPane.columnIndex="2"
                   GridPane.halignment="RIGHT"
                   GridPane.rowIndex="1"/>
            <Label text="modyfikatory jednoręcznie"
                   GridPane.rowIndex="6"/>
            <VBox alignment="CENTER"
                  GridPane.columnIndex="1"
                  GridPane.halignment="CENTER"
                  GridPane.rowIndex="4">
                <Label text="podstawowe"/>
                <TextField fx:id="strengthBasicWW"/>
                <Label fx:id="strengthBastardLabelWW"
                       text="jednoręcznie"/>
                <TextField fx:id="strengthBastardWW"
                           editable="false"/>
            </VBox>
            <Label text="nazwa typu" GridPane.rowIndex="1"/>
            <TextField fx:id="typeNameWW"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>
            <ComboBox fx:id="accessibilityBoxWW"
                      prefWidth="150.0"
                      GridPane.columnIndex="3"
                      GridPane.hgrow="ALWAYS"/>
            <ComboBox fx:id="placementBoxWW"
                      prefWidth="150.0"
                      GridPane.columnIndex="3"
                      GridPane.rowIndex="1"/>
            <VBox alignment="CENTER" prefHeight="200.0"
                  prefWidth="100.0" GridPane.columnIndex="1"
                  GridPane.rowIndex="5">
                <Label text="WW"/>
                <TextField fx:id="battleModWW"/>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0"
                  prefWidth="100.0" GridPane.columnIndex="3"
                  GridPane.rowIndex="5">
                <Label text="PP"/>
                <TextField fx:id="opponentParryModWW"/>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0"
                  prefWidth="100.0" GridPane.columnIndex="4"
                  GridPane.rowIndex="5">
                <Label text="P"/>
                <TextField fx:id="parryModWW"/>
            </VBox>
            <VBox alignment="CENTER"
                  GridPane.columnIndex="2"
                  GridPane.rowIndex="5">
                <Label text="I"/>
                <TextField fx:id="initModWW"/>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0"
                  prefWidth="100.0" GridPane.columnIndex="3"
                  GridPane.rowIndex="4">
                <Label text="kość"/>
                <ComboBox fx:id="diceWW"
                          prefWidth="150.0"/>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0"
                  prefWidth="100.0" GridPane.columnIndex="4"
                  GridPane.rowIndex="4">
                <Label text="ile razy"/>
                <Slider fx:id="rollsWW"
                        blockIncrement="1.0"
                        majorTickUnit="1.0" max="10.0"
                        min="1.0" minorTickCount="0"
                        showTickLabels="true"
                        showTickMarks="true"
                        snapToTicks="true" value="1.0">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Slider>
            </VBox>
            <TextField fx:id="bastBattleModWW"
                       editable="false"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="6"/>
            <TextField fx:id="bastInitModWW"
                       editable="false"
                       GridPane.columnIndex="2"
                       GridPane.rowIndex="6"/>
            <TextField fx:id="bastOpParryModWW"
                       editable="false"
                       GridPane.columnIndex="3"
                       GridPane.rowIndex="6"/>
            <TextField fx:id="bastParryModWW"
                       editable="false"
                       GridPane.columnIndex="4"
                       GridPane.rowIndex="6"/>
            <VBox alignment="CENTER" prefHeight="200.0"
                  prefWidth="100.0" GridPane.columnIndex="1"
                  GridPane.rowIndex="7">
                <Label text="przym. męski"/>
                <TextField fx:id="langMascWW"/>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0"
                  prefWidth="100.0" GridPane.columnIndex="2"
                  GridPane.rowIndex="7">
                <Label text="przym. żeński"/>
                <TextField fx:id="langFemWW"/>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0"
                  prefWidth="100.0" GridPane.columnIndex="3"
                  GridPane.rowIndex="7">
                <Label text="przym. nijaki"/>
                <TextField fx:id="langNeutrWW"/>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0"
                  prefWidth="100.0" GridPane.columnIndex="4"
                  GridPane.rowIndex="7">
                <Label text="narzędnik"/>
                <TextField fx:id="langAblativeWW"/>
            </VBox>
            <TextArea fx:id="specialFeaturesWW"
                      prefHeight="200.0" prefWidth="200.0"
                      GridPane.columnIndex="1"
                      GridPane.columnSpan="2"
                      GridPane.rowIndex="8"/>
            <Button maxWidth="Infinity"
                    GridPane.columnIndex="2"
                    GridPane.rowIndex="9"
                    text="Usuń"
                    onAction="#removeWhiteWeaponType"/>
            <Button maxWidth="Infinity"
                    mnemonicParsing="false" text="Nowy"
                    GridPane.columnIndex="3"
                    GridPane.rowIndex="9"/>
            <Button alignment="CENTER"
                    maxWidth="Infinity"
                    mnemonicParsing="false"
                    onAction="#saveWhiteWeaponType"
                    text="Zapisz" GridPane.columnIndex="4"
                    GridPane.rowIndex="9">
                <GridPane.margin>
                    <Insets/>
                </GridPane.margin>
            </Button>
        </GridPane>
    </SplitPane>
</TitledPane>
